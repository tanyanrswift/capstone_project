<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <main class= "container" style="color:white;">
            <% include ../static/partials/messages.ejs %>

            <h2>Create a New Lesson</h2>
            
            <form action="/lessons/create" method="post">
                <div class="form-group">
                  <label for="title">Lesson Title</label>
                  <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Lesson Title">
                </div>
                <div class="form-group">
                    <label for="description">Lesson Description</label>
                    <textarea row="3" class="form-control" name="description" placeholder="Enter Lesson Description"></textarea>
                </div>
                <div class="form-group">
                  <label for="body">Lesson Body</label>
                  <textarea rows="4" class="form-control" name="body" placeholder="Enter Lesson body"></textarea>
                </div>
                <button type="submit" class="btn btn-light">Submit</button>
              </form>
        </main>
    </body>
</html>